{
  "name": "Earth",
  "version": "0.0.0",
  "private": true,
  "main": "server/server.prod.js",
  "author": "muwenzi",
  "description": "muwenzi.com version3",
  "license": "BSD-3-Clause",
  "engines": {
    "node": "^8.0.0"
  },
  "scripts": {
    "boot": "yarn || (npm i -g yarn && yarn)",
    "webpack": "better-npm-run webpack",
    "dev": "better-npm-run dev",
    "presandbox": "better-npm-run presandbox",
    "sandbox": "better-npm-run sandbox",
    "preprod": "better-npm-run preprod",
    "prod": "better-npm-run prod",
    "check:conflict": "scripty",
    "check:eslint": "scripty"
  },
  "betterScripts": {
    "webpack": {
      "command": "npm run boot && node-dev server/server.webpack.js",
      "env": {
        "NODE_ENV": "development",
        "HOST": "localhost",
        "PORT": 3001,
        "TIMEOUT": 2000
      }
    },
    "dev": {
      "command": "npm run boot && node server/server.dev.js",
      "env": {
        "NODE_ENV": "development",
        "PORT": 3000
      }
    },
    "presandbox": {
      "command": "npm run boot && webpack --config webpack/webpack.prod.config.js",
      "env": {
        "NODE_ENV": "sandbox"
      }
    },
    "sandbox": {
      "command": "pm2 start server/server.prod.js --name 'earth-sanbox'",
      "env": {
        "NODE_ENV": "sandbox",
        "PORT": 8890
      }
    },
    "preprod": {
      "command": "npm run boot && webpack --config webpack/webpack.prod.config.js",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "prod": {
      "command": "pm2 start server/server.prod.js --name 'earth-production'",
      "env": {
        "NODE_ENV": "production",
        "PORT": 8892
      }
    }
  },
  "scripty": {
    "silent": true
  },
  "pre-commit": [
    "check:conflict",
    "check:eslint"
  ],
  "dependencies": {
    "autobind-decorator": "^1.4.3",
    "babel-core": "^6.24.0",
    "babel-loader": "^6.4.1",
    "babel-plugin-import": "^1.1.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-0": "^6.22.0",
    "babel-register": "^6.24.1",
    "babel-runtime": "^6.23.0",
    "better-npm-run": "^0.0.15",
    "config-lite": "1.5.0",
    "connect-flash": "0.1.1",
    "connect-mongo": "1.3.2",
    "css-loader": "^0.27.3",
    "express": "4.14.0",
    "express-formidable": "1.0.0",
    "express-session": "1.14.2",
    "express-winston": "2.0.0",
    "extract-text-webpack-plugin": "^2.1.0",
    "hbs": "^4.0.1",
    "isomorphic-style-loader": "^1.1.0",
    "jsx-loader": "^0.13.2",
    "less": "^2.7.2",
    "less-loader": "^3.0.0",
    "lodash": "^4.17.4",
    "marked": "0.3.6",
    "moment": "2.15.2",
    "mongolass": "2.4.1",
    "objectid-to-timestamp": "1.3.0",
    "pm2": "^2.4.6",
    "postcss-loader": "^1.3.3",
    "prop-types": "^15.5.10",
    "react": "^15.5.0",
    "react-css-modules": "^4.2.0",
    "react-dom": "^15.5.0",
    "react-flexbox-grid": "^1.1.3",
    "react-redux": "^5.0.5",
    "react-router": "^4.0.0",
    "react-router-dom": "^4.0.0",
    "react-router-redux": "^4.0.8",
    "redux": "^3.7.0",
    "redux-composable-fetch": "^0.3.4",
    "redux-devtools": "^3.4.0",
    "redux-thunk": "^2.2.0",
    "scripty": "^1.7.1",
